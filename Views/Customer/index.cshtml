@model List<Customer>

<h2>Customers</h2>
<br>
<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Date Of Creation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model) {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address</td>
                <td>@customer.DateOfCreation</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.CustomerID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@customer.CustomerID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.CustomerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p><a asp-action="Create">Create New Customer</a></p>
