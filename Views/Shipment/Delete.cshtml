@model Shipment

<h2>Delete Shipment</h2>
<br>
<h3>Are you sure you want to delete this shipment?</h3>
<div>
    <h4>Shipment</h4>
    <hr />
    <dl class="row">
        <dt>Order ID</dt>
        <dd>@Model.OrderID</dd>
        <dt>Date</dt>
        <dd>@Model.Date</dd>
        <dt>Status</dt>
        <dd>@Model.Status</dd>
        <dt>Shipping Number</dt>
        <dd>@Model.ShippingNumber</dd>
    </dl>
</div>
<form asp-action="Delete" asp-route-id="@Model.OrderID" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
