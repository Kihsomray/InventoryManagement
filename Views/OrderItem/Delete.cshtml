@model OrderItem

<h2>Delete OrderItem</h2>
<br>
<h3>Are you sure you want to delete this order item?</h3>
<div>
    <h4>OrderItem</h4>
    <hr />
    <dl class="row">
        <dt>Order ID</dt>
        <dd>@Model.OrderID</dd>
        <dt>Item ID</dt>
        <dd>@Model.ItemID</dd>
        <dt>Quantity</dt>
        <dd>@Model.Quantity</dd>
    </dl>
</div>
<form asp-action="Delete" asp-route-orderId="@Model.OrderID" asp-route-itemId="@Model.ItemID" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
