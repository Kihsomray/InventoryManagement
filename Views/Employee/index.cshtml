@model List<InventoryManagement.Models.Employee>

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Full Name</th>
            <th>Position</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Location</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.FullName</td>
                <td>@employee.Position</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Location?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Create New</a>
