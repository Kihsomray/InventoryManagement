@model Review

<h2>Delete Review</h2>
<br>
<h3>Are you sure you want to delete this review?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt>Customer ID</dt>
        <dd>@Model.CustomerID</dd>
        <dt>Item ID</dt>
        <dd>@Model.ItemID</dd>
        <dt>Rating</dt>
        <dd>@Model.Rating</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>
</div>
<form asp-action="Delete" asp-route-customerId="@Model.CustomerID" asp-route-itemId="@Model.ItemID" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
