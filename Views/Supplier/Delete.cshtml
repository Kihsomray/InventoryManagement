@model InventoryManagement.Models.Supplier

<h2>Delete Supplier</h2>
<br>
<dl class="row">
    <h3>Are you sure you want to delete this supplier?</h3>
    <hr />
    <dt>Supplier ID</dt>
    <dd>@Model.SupplierID</dd>
    <dt>Name</dt>
    <dd>@Model.Name</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Phone Number</dt>
    <dd>@Model.PhoneNumber</dd>
    <dt>Address</dt>
    <dd>@Model.Address</dd>
    <dt>Date Of Creation</dt>
    <dd>@Model.DateOfCreation.ToShortDateString()</dd>
</dl>
<form asp-action="Delete" asp-route-id="@Model.SupplierID" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
