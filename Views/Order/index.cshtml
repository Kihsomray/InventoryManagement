@model List<Order>

<h2>Orders</h2>
<br>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model) {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerID</td>
                <td>@order.OrderDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@order.OrderID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.OrderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p><a asp-action="Create">Create New Order</a></p>
